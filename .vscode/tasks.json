{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Local Server",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8000"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*)$"
                }
            }
        }
    ]
}
